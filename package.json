{
    "name": "@azerum/ts-csp",
    "version": "0.0.12",
    "description": "Go-style/CSP-style channels for TypeScript with async/await",
    "keywords": ["csp", "concurrency"],
    "homepage": "https://github.com/azerum/ts-csp",

    "repository": {
        "type": "git",
        "url": "git://github.com/azerum/ts-csp.git"
    },

    "type": "module",
    "main": "./out/index.js",
    "types": "./out/index.d.ts",
    "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
    "scripts": {
        "types": "tsc --noEmit",
        "build": "rm -rf ./out && tsc -p ./tsconfig.build.json",
        "prepublishOnly": "pnpm types && pnpm test && pnpm build",
        "test": "vitest run --coverage",
        "test:dev": "vitest",
        "doc": "typedoc --tsconfig ./tsconfig.build.json --out ./docs ./src/index.ts"
    },
    "devDependencies": {
        "@vitest/coverage-v8": "3.2.4",
        "typedoc": "0.28.13",
        "typescript": "5.9.2",
        "vitest": "3.2.4"
    }
}
